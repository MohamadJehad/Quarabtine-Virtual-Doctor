                    <span class="editable"  contenteditable="true"><%= patients[0].city %></span>
                    <input class="editField" type="text" id="city" name="city" value="<%= patients[0].city %>" required hidden/>
                  </li>
                  <li><i class="bi bi-chevron-right"></i> <strong>Building No:</strong> 
                    <span class="editable" contenteditable="true"><%= patients[0].buildingNo %></span>
                    <input class="editField" type="text"  id="buildingNo" name="buildingNo" value="<%= patients[0].buildingNo %>" required hidden/>
                  </li>

                  
                <% const birthdateStr = patients[0].birthDate; %>
                <!-- Parse the birthdate string into a Date object -->
                <% const [day, month,year] = birthdateStr.split('-').map(Number); %>
                <% const birthdate = new Date(year, month - 1, day); %>
                
                <!-- Calculate the age -->
                <% const today = new Date(); %>
                <% var age = today.getFullYear() - birthdate.getFullYear(); %>
                <% const monthDiff = today.getMonth() - birthdate.getMonth(); %>
                <% if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthdate.getDate())) { %>
                  <% age--; %>
                <% } %>

                <li>
                  <i class="bi bi-chevron-right"></i>
                  <strong>Age:</strong> 
                  <span class="editable"><%= age.toString() %></span>
                </li>
                  <li><i class="bi bi-chevron-right"></i> <strong>weight:</strong> 
