<main id="main" style="margin-top: 100px;">
  <section class="inner-page">
    <div class="container">
      <div class="section-title">
        <h2>IT Manager Dashboard</h2>
        <p>Welcome back, IT Manager. Here's an overview of all users in the system.</p>
      </div>

      <!-- Dashboard Stats -->
      <div class="row dashboard-stats">
        <div class="col-md-2">
          <a href="#IT_Manager" class="no-underline">
          <div class="stat-card bg-gradient-primary">
            <i class="fas fa-user-shield"></i>
            <h3><%= IT_Manager.length %></h3>
            <p>IT Managers</p>
          </div>
          </a>
        </div>
        <div class="col-md-2">
          <a href="#Doctor" class="no-underline">
          <div class="stat-card bg-gradient-success">
            <i class="fas fa-user-md"></i>
            <h3><%= doctors.length %></h3>
            <p>Doctors</p>
          </div>
          </a>
        </div>
        <div class="col-md-2">
          <a href="#Patient" class="no-underline">
          <div class="stat-card bg-gradient-warning">
            <i class="fas fa-user-injured"></i>
            <h3><%= patients.length %></h3>
            <p>Patients</p>
          </div>
          </a>
        </div>
        <div class="col-md-2">
          <a href="#Nurse" class="no-underline">
          <div class="stat-card bg-gradient-info">
            <i class="fas fa-user-nurse"></i>
            <h3><%= nurses.length %></h3>
            <p>Nurses</p>
          </div>
          </a>
        </div>
        <div class="col-md-2">
          <a href="#Receptionist" class="no-underline">
          <div class="stat-card bg-gradient-danger">
            <i class="fas fa-user-tie"></i>
            <h3><%= Receptionist.length %></h3>
            <p>Receptionists</p>
          </div>
          </a>
        </div>
      </div>

      <!-- IT Managers Section -->
      <section id="IT_Manager" class="mt-5">
        <div class="card shadow">
          <div class="card-header bg-primary text-white">
            <h3 class="mb-0">IT Managers</h3>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead class="table-dark">
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Mobile</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Gender</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(IT_Manager && IT_Manager.length > 0) { %>
                    <% IT_Manager.forEach(function(manager) { %>
                      <tr>
                        <td><%= manager.ID %></td>
                        <td><%= manager.FName %></td>
                        <td><%= manager.mobile %></td>
                        <td><%= manager.username %></td>
                        <td><%= manager.password %></td>
                        <td><%= manager.gender %></td>
                        <td>
                          <a href="/it-manager/edit-it-manager/<%= manager.ID %>" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i>
                          </a>
                          <form action="/it-manager/delete-it-manager/<%= manager.ID %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">
                              <i class="fas fa-trash"></i>
                            </button>
                          </form>
                        </td>
                      </tr>
                    <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="7" class="text-center">No IT managers found</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
            <div class="text-end mt-3">
              <a href="/it-manager/add-it-manager" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New IT Manager
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- Doctors Section -->
      <section id="Doctor" class="mt-5">
        <div class="card shadow">
          <div class="card-header bg-success text-white">
            <h3 class="mb-0">Doctors</h3>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead class="table-dark">
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Specialization</th>
                    <th>Mobile</th>
                    <th>Username</th>
                    <th>Gender</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(doctors && doctors.length > 0) { %>
                    <% doctors.forEach(function(doctor) { %>
                      <tr>
                        <td><%= doctor.ID %></td>
                        <td><%= doctor.FName %></td>
                        <td><%= doctor.specialization %></td>
                        <td><%= doctor.mobile %></td>
                        <td><%= doctor.username %></td>
                        <td><%= doctor.gender %></td>
                        <td>
                          <a href="/it-manager/patient/<%= doctor.ID %>" class="btn btn-sm btn-info">
                            <i class="fas fa-eye"></i>
                          </a>
                          <a href="/it-manager/edit-doctor/<%= doctor.ID %>" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i>
                          </a>
                          <form action="/it-manager/delete-doctor/<%= doctor.ID %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">
                              <i class="fas fa-trash"></i>
                            </button>
                          </form>
                        </td>
                      </tr>
                    <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="7" class="text-center">No doctors found</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
            <div class="text-end mt-3">
              <a href="/it-manager/add-doctor" class="btn btn-success">
                <i class="fas fa-plus"></i> Add New Doctor
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- Patients Section -->
      <section id="Patient" class="mt-5">
        <div class="card shadow">
          <div class="card-header bg-warning text-dark">
            <h3 class="mb-0">Patients</h3>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead class="table-dark">
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Mobile</th>
                    <th>Room</th>
                    <th>Assigned Doctor</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(patients && patients.length > 0) { %>
                    <% patients.forEach(function(patient) { %>
                      <tr>
                        <td><%= patient.ID %></td>
                        <td><%= patient.FName %></td>
                        <td><%= patient.gender %></td>
                        <td><%= patient.mobile %></td>
                        <td><%= patient.room_id || 'Not Assigned' %></td>
                        <td><%= patient.assigned_doctor %></td>
                        <td>
                          <a href="/it-manager/patient/<%= patient.ID %>" class="btn btn-sm btn-info">
                            <i class="fas fa-eye"></i>
                          </a>
                        </td>
                      </tr>
                    <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="7" class="text-center">No patients found</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </section>

      <!-- Nurses Section -->
      <section id="Nurse" class="mt-5">
        <div class="card shadow">
          <div class="card-header bg-info text-white">
            <h3 class="mb-0">Nurses</h3>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead class="table-dark">
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Username</th>
                    <th>Gender</th>
                    <th>Floor</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(nurses && nurses.length > 0) { %>
