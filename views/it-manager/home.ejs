                          <a href="/it-manager/edit-nurse/<%= nurse.id %>" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i>
                          </a>
                          <form action="/it-manager/delete-nurse/<%= nurse.id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">
                              <i class="fas fa-trash"></i>
                            </button>
                          </form>
                        </td>
                      </tr>
                    <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="7" class="text-center">No nurses found</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
            <div class="text-end mt-3">
              <a href="/it-manager/add-nurse" class="btn btn-info">
                <i class="fas fa-plus"></i> Add New Nurse
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- Receptionists Section -->
      <section id="Receptionist" class="mt-5">
        <div class="card shadow">
          <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Receptionists</h3>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead class="table-dark">
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Mobile</th>
                    <th>Username</th>
                    <th>Gender</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(Receptionist && Receptionist.length > 0) { %>
                    <% Receptionist.forEach(function(receptionist) { %>
                      <tr>
                        <td><%= receptionist.ID %></td>
                        <td><%= receptionist.FName %></td>
                        <td><%= receptionist.mobile %></td>
                        <td><%= receptionist.username %></td>
                        <td><%= receptionist.Gender %></td>
                        <td>
                          <a href="/it-manager/edit-receptionist/<%= receptionist.ID %>" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i>
                          </a>
                          <form action="/it-manager/delete-receptionist/<%= receptionist.ID %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">
                              <i class="fas fa-trash"></i>
                            </button>
                          </form>
                        </td>
                      </tr>
                    <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="6" class="text-center">No receptionists found</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
            <div class="text-end mt-3">
              <a href="/it-manager/add-receptionist" class="btn btn-danger">
                <i class="fas fa-plus"></i> Add New Receptionist
              </a>
            </div>
          </div>
        </div>
      </section>
    </div>
  </section>
</main><!-- End #main -->

