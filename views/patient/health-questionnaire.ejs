<!-- ======= Header ======= -->
<header id="header" class="fixed-top">
  <div class="container d-flex align-items-center">
    <h1 class="logo me-auto"><a href="/">Quarantine Virtual Doctor</a></h1>
    <nav id="navbar" class="navbar order-last order-lg-0">
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Menu
          </a>
          <ul class="dropdown-menu" style="position: fixed; top: 50px; width: 30px; left: 88%; z-index: 1000;" aria-labelledby="navbarDropdown">
            <li><a class="dropdown-item" href="/it-manager/home">Dashboard</a></li>
            <li><a class="dropdown-item" href="#">Settings</a></li>
            <li><a class="dropdown-item" href="#">Help</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/auth/logout">Log Out</a></li>
          </ul>
        </li>
      </ul>
      <i class="bi bi-list mobile-nav-toggle"></i>
    </nav><!-- .navbar -->
  </div>
</header><!-- End Header -->

<main id="main" style="margin-top: 100px;">
  <section class="inner-page">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card shadow">
            <div class="card-header bg-primary text-white">
              <h3 class="mb-0">Patient Health Questionnaire</h3>
            </div>
            <div class="card-body">
              <form action="/patient/health-questionnaire" method="POST">
                <input type="hidden" name="patientId" value="<%= patientId %>">
                
                <!-- Health Questions -->
                <div class="mb-4">
                  <h5 class="border-bottom pb-2">Medical History</h5>
                  
                  <div class="mb-3">
                    <label for="bloodpressure" class="form-label">Do you have a history of high blood pressure?</label>
                    <select class="form-select" id="bloodpressure" name="bloodpressure" required>
                      <option value="" selected disabled>Please select</option>
                      <option value="Yes">Yes</option>
                      <option value="No">No</option>
                      <option value="Not sure">Not sure</option>
                    </select>
                  </div>
                  
                  <div class="mb-3">
                    <label for="diabetes" class="form-label">Are you taking any medication for diabetes?</label>
                    <select class="form-select" id="diabetes" name="diabetes" required>
                      <option value="" selected disabled>Please select</option>
                      <option value="Yes">Yes</option>
                      <option value="No">No</option>
                      <option value="Not sure">Not sure</option>
                    </select>
                  </div>
                  
                  <div class="mb-3">
                    <label for="heartdisease" class="form-label">Do you have a history of heart disease?</label>
                    <select class="form-select" id="heartdisease" name="heartdisease" required>
                      <option value="" selected disabled>Please select</option>
                      <option value="Yes">Yes</option>
                      <option value="No">No</option>
                      <option value="Not sure">Not sure</option>
                    </select>
                  </div>
                  
                  <div class="mb-3">
                    <label for="allergies" class="form-label">Do you have any known medication allergies?</label>
                    <textarea class="form-control" id="allergies" name="allergies" rows="2" required></textarea>
                    <small class="text-muted">If none, please write "None"</small>
                  </div>
                  
                  <div class="mb-3">
                    <label for="pregnant" class="form-label">Are you currently pregnant?</label>
                    <select class="form-select" id="pregnant" name="pregnant" required>
                      <option value="" selected disabled>Please select</option>
                      <option value="Yes">Yes</option>
                      <option value="No">No</option>
                      <option value="Not applicable">Not applicable</option>
                    </select>
                  </div>
                </div>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                  <a href="javascript:history.back()" class="btn btn-secondary me-md-2">Back</a>
                  <button type="submit" class="btn btn-primary">
                    <i class="fas fa-arrow-right me-2"></i>Continue to Room Assignment
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main><!-- End #main -->

<!-- ======= Footer ======= -->
<footer id="footer">
  <div class="container">
    <div class="copyright">
      &copy; <strong><span>QUARANTINE VIRTUAL DOCTOR</span></strong>.
      <br>
      <strong><a href="http://www.helwan.edu.eg">Faculty Of Engineering - Helwan University</a></strong>
      <br>
    </div>
  </div>
</footer><!-- End Footer -->

<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
<div id="preloader"></div>

<%- contentFor('head') %>
<link rel="stylesheet" href="/styling/add-patient.css">

<%- contentFor('scripts') %>
<script>
  // Form validation
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    
    form.addEventListener('submit', function(event) {
      const selects = form.querySelectorAll('select');
      let valid = true;
      
      selects.forEach(select => {
        if (!select.value) {
          valid = false;
          select.classList.add('is-invalid');
        } else {
          select.classList.remove('is-invalid');
        }
      });
      
      if (!valid) {
        event.preventDefault();
        alert('Please answer all questions before proceeding.');
      }
    });
  });
</script>
