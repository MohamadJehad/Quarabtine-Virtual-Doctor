    </nav><!-- .navbar -->
  </div>
</header><!-- End Header -->

<main id="main" style="margin-top: 100px;">
  <section class="inner-page">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card shadow">
            <div class="card-header bg-primary text-white">
              <h3 class="mb-0">Add New Patient</h3>
            </div>
            <div class="card-body">
              <form action="/patient/add" method="POST">
                <!-- Personal Information -->
                <div class="mb-4">
                  <h5 class="border-bottom pb-2">Personal Information</h5>
                  
                  <div class="mb-3">
                    <label for="FName" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="FName" name="FName" required>
                  </div>
                  
                  <div class="mb-3">
                    <label class="form-label d-block">Gender</label>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="radio" name="Male" id="genderMale" value="true" checked>
                      <label class="form-check-label" for="genderMale">Male</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="radio" name="Female" id="genderFemale" value="true">
                      <label class="form-check-label" for="genderFemale">Female</label>
                    </div>
                  </div>
                  
                  <div class="mb-3">
                    <label for="birthDate" class="form-label">Birth Date</label>
                    <input type="date" class="form-control" id="birthDate" name="birthDate" required>
                  </div>
                  
                  <div class="mb-3">
                    <label for="weight" class="form-label">Weight (kg)</label>
                    <input type="number" class="form-control" id="weight" name="weight" step="0.01" required>
                  </div>
                  
                  <div class="mb-3">
                    <label for="mobile" class="form-label">Mobile Number</label>
                    <input type="tel" class="form-control" id="mobile" name="mobile" required>
                  </div>
                </div>
                
                <!-- Address Information -->
                <div class="mb-4">
                  <h5 class="border-bottom pb-2">Address Information</h5>
                  
                  <div class="mb-3">
                    <label for="city" class="form-label">City</label>
                    <input type="text" class="form-control" id="city" name="city" required>
                  </div>
                  
                  <div class="mb-3">
                    <label for="street" class="form-label">Street</label>
                    <input type="text" class="form-control" id="street" name="street" required>
                  </div>
                  
                  <div class="mb-3">
                    <label for="buildingNo" class="form-label">Building Number</label>
                    <input type="number" class="form-control" id="buildingNo" name="buildingNo" required>
                  </div>
                </div>
                
                <!-- Doctor Assignment -->
                <div class="mb-4">
                  <h5 class="border-bottom pb-2">Doctor Assignment</h5>
                  
                  <div class="mb-3">
                    <label for="doctor-list" class="form-label">Assign Doctor</label>
                    <select class="form-select" id="doctor-list" name="doctor-list" required>
                      <option value="" selected disabled>Select a doctor</option>
                      <% if (doctors && doctors.length > 0) { %>
                        <% doctors.forEach(function(doctor) { %>
                          <option value="<%= doctor.FName %>"><%= doctor.FName %> - <%= doctor.specialization %></option>
                        <% }); %>
                      <% } %>
                    </select>
                  </div>
                </div>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                  <a href="javascript:history.back()" class="btn btn-secondary me-md-2">Cancel</a>
                  <button type="submit" class="btn btn-primary">
                    <i class="fas fa-user-plus me-2"></i>Continue to Health Questionnaire
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main><!-- End #main -->

