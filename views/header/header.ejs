<header class="bg-primary text-white py-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 mb-0">Quarantine Virtual Doctor</h1>
                <p class="mb-0">Healthcare Management System</p>
            </div>
            <% if (typeof user !== 'undefined' && user) { %>
                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user-md me-2"></i><%= user.name %>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="/profile"><i class="fas fa-user me-2"></i>Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form action="/auth/logout" method="POST" class="dropdown-item p-0">
                                <button type="submit" class="btn btn-link text-danger w-100 text-start px-3 py-1">
                                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            <% } %>
        </div>
    </div>
</header>
